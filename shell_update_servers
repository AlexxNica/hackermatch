
rm -rf /var/www/meteor/hackermatch/bundle
mkdir -p /var/www/meteor/hackermatch

cd /root/hackermatch
meteor build --directory /var/www/meteor/hackermatch --server=http://hackermat.ch

#ensure fibers and underscore etc are installed properly
cd /var/www/meteor/hackermatch/bundle/programs/server
npm install

cd /var/www/meteor/hackermatch/bundle

sudo ROOT_URL="http://hackermat.ch" PORT=2600 MONGO_URL="mongodb://hackadmin:hackpassword@127.0.0.1:27017/hackermatch" forever start --append --uid "hm1" main.js
sudo ROOT_URL="http://hackermat.ch" PORT=2601 MONGO_URL="mongodb://hackadmin:hackpassword@127.0.0.1:27017/hackermatch" forever start --append --uid "hm2" main.js


